{
  "name": "an-example-react-package-built-with-nextjs-tooling",
  "author": {
    "name": "David Johnston",
    "email": "david@blacksheepcode.com",
    "url": "https://blacksheepcode.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwjohnston/ultimate-react-package-template.git"
  },
  "version": "0.8.0",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "main": "./dist/exports.js",
  "files": [
    "./dist"
  ],
  "exports": {
    ".": "./dist/exports.js",
    "./client": "./dist/export-client.js",
    "./dist/main.css": {
      "import": "./dist/main.css",
      "require": "./dist/main.css"
    }
  },
  "scripts": {
    "next:dev": "next dev --turbopack",
    "next:build": "npm run build-storybook && npm run build:docs && cp -r docs public && next build",
    "next:start": "next start",
    "next:lint": "next lint",
    "build": "rm -rf dist && tsc -p tsconfig.build.json && cp src/lib/*.css dist",
    "build:docs": "typedoc",
    "docs:serve": "http-server docs -p 8080",
    "prepublishOnly": "npm run build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build && cp -r storybook-static public",
    "test-storybook": "test-storybook",
    "changeset": "changeset",
    "release": "changeset publish"
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@chromatic-com/storybook": "^3.2.6",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/experimental-nextjs-vite": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@storybook/test-runner": "^0.22.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/browser": "^3.1.2",
    "@vitest/coverage-v8": "^3.1.2",
    "http-server": "^14.1.1",
    "next": "15.3.1",
    "playwright": "^1.52.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "storybook": "^8.6.12",
    "typedoc": "^0.28.7",
    "typescript": "^5",
    "vitest": "^3.1.2"
  }
}
